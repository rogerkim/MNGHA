@model IEnumerable<Homework.VM.InvoiceVM>

@{
    ViewBag.Title = "Invoice";
}
<img src="~/img/wallmart.png" />
<p>&nbsp;</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Invoice ID
        </th>
        <th>
            Add date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(m => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(m => item.InvoiceID)
        </td>
        <td>
            @Html.DisplayFor(m => item.AddDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InvoiceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InvoiceID }, new { onclick = "return confirm('Are you sure sure to delete?');" })
        </td>
    </tr>
}

</table>

<script>
    $(document).ready(function () {
        $("#section1").addClass("active");
    });
</script>
